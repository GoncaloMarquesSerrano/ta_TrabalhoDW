@model Ludix.Models.Purchase

<div class="container py-5">
    <div class="card border-success">
        <div class="card-header bg-success text-white">
            <h3>Compra Realizada com Sucesso!</h3>
        </div>
        <div class="card-body">
            <div class="alert alert-success">
                <h4>Obrigado por sua compra!</h4>
                <p>Seu pedido #@Model.PurchaseId foi confirmado.</p>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <h5>Detalhes da Compra</h5>
                    <p><strong>Número do Pedido:</strong> #@Model.PurchaseId</p>
                    <p><strong>Data:</strong> @Model.PurchaseDate.ToString("dd/MM/yyyy HH:mm")</p>
                    <p><strong>Método de Pagamento:</strong> @Model.PaymentMethod</p>
                    <p><strong>Status:</strong> @Model.Status</p>
                </div>
                <div class="col-md-6">
                    <h5>Item Comprado</h5>
                    <p>@Model.Game.Name</p>
                    <p>@Model.PricePaid.ToString("C")</p>
                </div>
            </div>

            <div class="mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                    Voltar à Página Inicial
                </a>
            </div>
        </div>
    </div>
</div>