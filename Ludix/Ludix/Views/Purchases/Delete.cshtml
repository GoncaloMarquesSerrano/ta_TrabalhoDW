@model Ludix.Models.Purchase

@{
    ViewData["Title"] = "Excluir Compra";
}

<div class="card">
    <div class="card-header bg-danger text-white">
        <h3>Confirmar Exclusão</h3>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <h4>Tem certeza que deseja excluir esta compra?</h4>
            <p class="mb-0">Esta ação não pode ser desfeita.</p>
        </div>

        <div class="row">
            <div class="col-md-6">
                <h4>Informações da Compra</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.PurchaseDate)
                    </dt>
                    <dd class="col-sm-8">
                        @Model.PurchaseDate.ToString("dd/MM/yyyy HH:mm")
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.PricePaid)
                    </dt>
                    <dd class="col-sm-8">
                        @Model.PricePaid.ToString("C")
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.PaymentMethod)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.PaymentMethod)
                    </dd>
                </dl>
            </div>

            <div class="col-md-6">
                <h4>Detalhes do Jogo</h4>
                <hr />
                <div class="media">
                    @if (!string.IsNullOrEmpty(Model.Game?.Cover))
                    {
                        <img src="@Model.Game.Cover" class="mr-3" alt="@Model.Game.Name" style="max-width: 100px;">
                    }
                    <div class="media-body">
                        <h5 class="mt-0">@Model.Game?.Name</h5>
                        <p>@Model.Game?.Description</p>
                        <p class="text-success">@Model.Game?.Price.ToString("C")</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <form asp-action="Delete">
                <input type="hidden" asp-for="PurchaseId" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Confirmar Exclusão
                </button>
                <a asp-action="Index" class="btn btn-secondary ml-2">
                    <i class="fas fa-arrow-left"></i> Voltar à lista
                </a>
            </form>
        </div>
    </div>
</div>
