@model Ludix.Models.Game
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Release Date</dt>
        <dd class="col-sm-10">@Model.ReleaseDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Cover</dt>
        <dd class="col-sm-10">
            <img src="~/covers/@Model.Cover" alt="Cover" style="max-width: 300px; max-height: 300px;" />
        </dd>

        <dt class="col-sm-2">Géneros</dt>
        <dd class="col-sm-10">
            @if (Model.Genres != null && Model.Genres.Any())
            {
                <ul>
                    @foreach (var genre in Model.Genres)
                    {
                        <li>@genre.GenreName</li>
                    }
                </ul>
            }
            else
            {
                <span>Nenhum género associado.</span>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.GameId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
