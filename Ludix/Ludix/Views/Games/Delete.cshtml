@model Ludix.Models.Game
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<h4>Tem certeza que deseja apagar este jogo?</h4>
<hr />
<div>
    <h4>@Model.Title</h4>
    <dl class="row">
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Release Date</dt>
        <dd class="col-sm-10">@Model.ReleaseDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Cover</dt>
        <dd class="col-sm-10">
            <img src="~/covers/@Model.Cover" alt="Cover" style="max-width: 200px; max-height: 200px;" />
        </dd>

        <dt class="col-sm-2">Géneros</dt>
        <dd class="col-sm-10">
            @if (Model.Genres != null && Model.Genres.Any())
            {
                <ul>
                    @foreach (var genre in Model.Genres)
                    {
                        <li>@genre.GenreName</li>
                    }
                </ul>
            }
            else
            {
                <span>Nenhum género associado.</span>
            }
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="GameId" />
    <div class="form-group mt-3">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
