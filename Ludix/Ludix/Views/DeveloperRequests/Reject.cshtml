@model Ludix.Models.MyUser

@{
    ViewData["Title"] = "Rejeitar Desenvolvedor";
}


<h1>@ViewData["Title"]</h1>

<div class="alert alert-danger">
    <h4>Tem a certeza que deseja rejeitar esta solicitação?</h4>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Username</dd>
        
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        
        <dt class="col-sm-2">Website</dt>
        <dd class="col-sm-10">@Model.ProposedWebsite</dd>
        
        <dt class="col-sm-2">Data da Solicitação</dt>
        <dd class="col-sm-10">@Model.DeveloperRequestDate?.ToString("dd/MM/yyyy HH:mm")</dd>
    </dl>

    <form asp-action="Reject" method="post">
        <input type="hidden" asp-for="UserId" />
        <button type="submit" class="btn btn-danger">Confirmar Rejeição</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>