@model Ludix.Models.MyUser
@{
    ViewData["Title"] = "Meu Perfil";

    // Verificar se o modelo é nulo
    if (Model == null)
    {
        <div class="alert alert-danger">
            <h4>Erro ao carregar o perfil</h4>
            <p>Não foi possível carregar as informações do seu perfil. Por favor, tente novamente.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Voltar à página inicial</a>
        </div>
        return;
    }
}
<style>
    .profile-container {
        background: var(--secondary-dark);
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 6px 15px rgba(0,0,0,0.2);
        margin-top: 2rem;
        border: 1px solid rgba(255,215,0,0.1);
    }

    .profile-header {
        display: flex;
        align-items: center;
        margin-bottom: 2rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid rgba(255,215,0,0.2);
    }

    .profile-avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background-color: var(--primary-dark);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        color: var(--accent-gold);
        margin-right: 2rem;
        border: 3px solid var(--accent-gold);
    }

    .profile-info h2 {
        color: var(--accent-gold);
        margin-bottom: 0.5rem;
    }

    .profile-info p {
        color: var(--text-light);
        margin-bottom: 0.3rem;
    }

    .profile-details {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
        margin-top: 1.5rem;
    }

    .detail-card {
        background: rgba(10, 25, 47, 0.5);
        padding: 1.5rem;
        border-radius: 10px;
        border-left: 3px solid var(--accent-gold);
    }

        .detail-card h4 {
            color: var(--accent-gold);
            margin-bottom: 1rem;
        }

    .detail-item {
        margin-bottom: 0.8rem;
    }

    .detail-label {
        color: #a8b2d1;
        font-weight: 600;
        display: block;
        margin-bottom: 0.2rem;
    }

    .detail-value {
        color: var(--text-light);
        font-size: 1.1rem;
    }

    .balance-display {
        font-size: 1.8rem;
        color: var(--accent-gold);
        font-weight: 700;
        margin: 1rem 0;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn-edit {
        background-color: transparent;
        color: var(--accent-gold);
        border: 2px solid var(--accent-gold);
        padding: 0.5rem 1.5rem;
        border-radius: 20px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-edit:hover {
            background-color: var(--accent-gold);
            color: var(--primary-dark);
        }

    .btn-deposit {
        background-color: var(--accent-gold);
        color: var(--primary-dark);
        border: none;
        padding: 0.5rem 1.5rem;
        border-radius: 20px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-deposit:hover {
            background-color: transparent;
            color: var(--accent-gold);
            border: 2px solid var(--accent-gold);
        }
</style>

<div class="container">
    <div class="profile-container">
        <div class="profile-header">
            <div class="profile-avatar">
                @Model.Username.Substring(0, 1).ToUpper()
            </div>
            <div class="profile-info">
                <h2>@Model.Username</h2>
                <p>Membro desde @Model.CreatedAt.ToString("dd/MM/yyyy")</p>
            </div>
        </div>

        <div class="balance-display">
            Saldo: @Model.Balance.ToString("C")
        </div>

        <div class="profile-details">
            <div class="detail-card">
                <h4>Informações Pessoais</h4>
                <div class="detail-item">
                    <span class="detail-label">Nome de Usuário</span>
                    <span class="detail-value">@Model.Username</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Email</span>
                    <span class="detail-value">@Model.Email</span>
                </div>
            </div>

            <div class="detail-card">
                <h4>Atividade</h4>
                <div class="detail-item">
                    <span class="detail-label">ID do Usuário</span>
                    <span class="detail-value">@Model.UserId</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Conta Criada em</span>
                    <span class="detail-value">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                </div>
            </div>
        </div>

        <div class="action-buttons">
            <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn-edit">Editar Perfil</a>
            <a href="#" class="btn-deposit">Adicionar Saldo</a>
        </div>
    </div>
</div>
