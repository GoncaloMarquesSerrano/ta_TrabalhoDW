
@{
    ViewData["Title"] = "Perfil do Utilizador";
}

<style>
    :root {
        --primary-dark: #0a192f;
        --secondary-dark: #172a45;
        --accent-gold: #FFD700;
        --text-light: #e6f1ff;
        --hover-gold: #ffd900cc;
        --input-bg: #112240;
        --input-border: #233554;
    }

    body {
        background-color: var(--primary-dark);
        color: var(--text-light);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .profile-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .profile-header {
        background-color: var(--secondary-dark);
        border-radius: 10px;
        padding: 2rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        border: 1px solid rgba(255,215,0,0.1);
        margin-bottom: 2rem;
        position: relative;
    }

    .profile-banner {
        height: 200px;
        background: linear-gradient(135deg, var(--primary-dark) 0%, var(--secondary-dark) 100%);
        border-radius: 8px;
        margin-bottom: 1rem;
        position: relative;
        overflow: hidden;
    }

    .profile-avatar {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        border: 4px solid var(--accent-gold);
        object-fit: cover;
        position: absolute;
        bottom: -75px;
        left: 50px;
        background-color: var(--secondary-dark);
    }

    .profile-actions {
        position: absolute;
        right: 2rem;
        bottom: 2rem;
    }

    .profile-info {
        margin-top: 80px;
        padding-left: 220px;
    }

    .profile-name {
        color: var(--accent-gold);
        font-size: 2.2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .profile-username {
        color: #8892b0;
        font-size: 1.2rem;
        margin-bottom: 1rem;
    }

    .profile-bio {
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    .profile-stats {
        display: flex;
        gap: 2rem;
        margin-bottom: 1.5rem;
    }

    .stat-item {
        text-align: center;
    }

    .stat-value {
        color: var(--accent-gold);
        font-size: 1.5rem;
        font-weight: 700;
    }

    .stat-label {
        color: #8892b0;
        font-size: 0.9rem;
    }

    .profile-content {
        display: grid;
        grid-template-columns: 300px 1fr;
        gap: 2rem;
    }

    .profile-sidebar {
        background-color: var(--secondary-dark);
        border-radius: 10px;
        padding: 1.5rem;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        border: 1px solid rgba(255,215,0,0.1);
        height: fit-content;
    }

    .sidebar-section {
        margin-bottom: 1.5rem;
    }

    .sidebar-title {
        color: var(--accent-gold);
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid rgba(255,215,0,0.2);
    }

    .sidebar-item {
        margin-bottom: 0.8rem;
    }

    .sidebar-label {
        color: #8892b0;
        font-weight: 500;
    }

    .sidebar-value {
        color: var(--text-light);
    }

    .profile-main {
        background-color: var(--secondary-dark);
        border-radius: 10px;
        padding: 1.5rem;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        border: 1px solid rgba(255,215,0,0.1);
    }

    .section-title {
        color: var(--accent-gold);
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid var(--accent-gold);
    }

    .btn-edit {
        background-color: transparent;
        border: 2px solid var(--accent-gold);
        color: var(--accent-gold);
        font-weight: 600;
        padding: 0.5rem 1.5rem;
        border-radius: 30px;
        transition: all 0.3s ease;
    }

        .btn-edit:hover {
            background-color: var(--accent-gold);
            color: var(--primary-dark);
        }

    .game-card {
        background-color: var(--input-bg);
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 1rem;
        border-left: 4px solid var(--accent-gold);
        transition: all 0.3s ease;
    }

        .game-card:hover {
            transform: translateX(5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }

    .game-title {
        color: var(--accent-gold);
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .game-meta {
        color: #8892b0;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }

    .game-description {
        font-size: 0.95rem;
        line-height: 1.5;
    }

    .badge-gold {
        background-color: rgba(255, 215, 0, 0.1);
        color: var(--accent-gold);
        font-weight: 600;
        padding: 0.35rem 0.75rem;
        border-radius: 50px;
    }

    .tab-nav {
        display: flex;
        border-bottom: 1px solid rgba(255,215,0,0.2);
        margin-bottom: 1.5rem;
    }

    .tab-link {
        padding: 0.75rem 1.5rem;
        color: #8892b0;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        border-bottom: 3px solid transparent;
    }

        .tab-link.active, .tab-link:hover {
            color: var(--accent-gold);
            border-bottom-color: var(--accent-gold);
        }

    .tab-content {
        display: none;
    }

        .tab-content.active {
            display: block;
        }
</style>

