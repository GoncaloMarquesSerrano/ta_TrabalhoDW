@model List<Ludix.Models.Game>
@{
    ViewData["Title"] = "Todos os Jogos";
}

<style>
    :root {
        --primary-dark: #0a192f;
        --secondary-dark: #172a45;
        --accent-gold: #FFD700;
        --text-light: #e6f1ff;
        --hover-gold: #ffd900cc;
    }

    body {
        background-color: var(--primary-dark);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: var(--text-light);
    }

    .page-header {
        background: linear-gradient(135deg, var(--primary-dark) 0%, var(--secondary-dark) 100%);
        padding: 3rem 0;
        margin-bottom: 2rem;
        border-radius: 0 0 20px 20px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.3);
        border-bottom: 2px solid var(--accent-gold);
    }

    .game-card {
        background: var(--secondary-dark);
        border-radius: 15px;
        box-shadow: 0 6px 15px rgba(0,0,0,0.2);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid rgba(255,215,0,0.1);
        overflow: hidden;
        height: 100%;
    }

        .game-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 25px rgba(0,0,0,0.4);
            border-color: var(--accent-gold);
        }

        .game-card .card-title {
            color: var(--accent-gold);
            font-weight: 700;
            border-bottom: 2px solid rgba(255,215,0,0.2);
            padding-bottom: 10px;
        }

        .game-card .card-text {
            color: #a8b2d1;
        }

        .game-card strong {
            color: var(--text-light);
        }

    .game-cover {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 10px 10px 0 0;
    }

    .rating-stars {
        color: var(--accent-gold);
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
    }

    .genre-badge {
        display: inline-block;
        background-color: var(--accent-gold);
        color: var(--primary-dark);
        padding: 0.2rem 0.6rem;
        border-radius: 15px;
        margin-right: 0.3rem;
        margin-bottom: 0.3rem;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .btn-game-details {
        background-color: var(--accent-gold);
        color: var(--primary-dark);
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        margin-top: 1rem;
    }

        .btn-game-details:hover {
            background-color: var(--primary-dark);
            color: var(--accent-gold);
            border: 1px solid var(--accent-gold);
            transform: translateY(-2px);
        }

    .price-tag {
        background-color: var(--accent-gold);
        color: var(--primary-dark);
        padding: 0.3rem 0.8rem;
        border-radius: 20px;
        font-weight: 700;
        float: right;
        margin-top: 0.5rem;
    }

    .filter-section {
        background: var(--secondary-dark);
        padding: 1.5rem;
        border-radius: 10px;
        margin-bottom: 2rem;
        border: 1px solid rgba(255,215,0,0.1);
    }

    .filter-title {
        color: var(--accent-gold);
        margin-bottom: 1rem;
        font-weight: 600;
    }

    .form-control, .form-select {
        background-color: #0a192f;
        border: 1px solid rgba(255,215,0,0.2);
        color: var(--text-light);
    }

        .form-control:focus, .form-select:focus {
            background-color: #0a192f;
            color: var(--text-light);
            border-color: var(--accent-gold);
            box-shadow: 0 0 0 0.25rem rgba(255, 215, 0, 0.25);
        }

    .btn-filter {
        background-color: var(--accent-gold);
        color: var(--primary-dark);
        font-weight: 600;
    }

        .btn-filter:hover {
            background-color: var(--primary-dark);
            color: var(--accent-gold);
            border: 1px solid var(--accent-gold);
        }

    .pagination .page-item .page-link {
        background-color: var(--secondary-dark);
        color: var(--accent-gold);
        border: 1px solid rgba(255,215,0,0.2);
    }

        .pagination .page-item .page-link:hover {
            background-color: var(--accent-gold);
            color: var(--primary-dark);
        }

    .pagination .page-item.active .page-link {
        background-color: var(--accent-gold);
        color: var(--primary-dark);
        border-color: var(--accent-gold);
    }

    .no-games {
        text-align: center;
        padding: 3rem;
        background: var(--secondary-dark);
        border-radius: 10px;
    }

    .sort-options {
        display: flex;
        gap: 10px;
        margin-bottom: 1rem;
    }

    .sort-btn {
        background: transparent;
        color: var(--text-light);
        border: 1px solid var(--accent-gold);
        padding: 0.3rem 0.8rem;
        border-radius: 20px;
        transition: all 0.3s ease;
    }

        .sort-btn:hover, .sort-btn.active {
            background: var(--accent-gold);
            color: var(--primary-dark);
        }

    .game-count {
        color: var(--accent-gold);
        font-weight: 600;
        margin-bottom: 1rem;
    }
</style>

<div class="page-header">
    <div class="container text-center">
        <h1 style="color: var(--accent-gold); text-shadow: 2px 2px 4px rgba(0,0,0,0.5);">Todos os Jogos</h1>
        <p class="lead" style="color: #8892b0;">Explore nossa coleção completa de jogos</p>
    </div>
</div>

<div class="container">
    <div class="filter-section">
        <h4 class="filter-title">Filtrar Jogos</h4>
        <form method="get" asp-action="AllGames">
            <div class="row g-3">
                <div class="col-md-4">
                    <label for="searchTerm" class="form-label">Pesquisar</label>
                    <input type="text" class="form-control" id="searchTerm" name="searchTerm" placeholder="Título, desenvolvedor...">
                </div>
                <div class="col-md-3">
                    <label for="genre" class="form-label">Gênero</label>
                    <select class="form-select" id="genre" name="genre">
                        <option value="">Todos</option>
                        @foreach (var genre in Model.SelectMany(g => g.Genres).Select(g => g.GenreName).Distinct())
                        {
                            <option value="@genre">@genre</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="sortBy" class="form-label">Ordenar por</label>
                    <select class="form-select" id="sortBy" name="sortBy">
                        <option value="newest">Mais recentes</option>
                        <option value="oldest">Mais antigos</option>
                        <option value="price_asc">Preço: menor primeiro</option>
                        <option value="price_desc">Preço: maior primeiro</option>
                        <option value="rating">Melhor avaliados</option>
                        <option value="title">Título (A-Z)</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-filter w-100">Filtrar</button>
                </div>
            </div>
        </form>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <div class="game-count">
                @Model.Count jogos encontrados
            </div>
        </div>
        <div class="col-md-6">
            <div class="sort-options justify-content-end">
                <button class="sort-btn active">Todos</button>
                <button class="sort-btn">Promoções</button>
                <button class="sort-btn">Lançamentos</button>
            </div>
        </div>
    </div>

    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var game in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card game-card h-100">
                        @if (!string.IsNullOrEmpty(game.Cover))
                        {
                            <img src="~/covers/@game.Cover" alt="Capa de @game.Title" class="game-cover">
                        }
                        <div class="card-body d-flex flex-column">
                            <h2 class="card-title">@game.Title</h2>

                            @if (game.Reviews.Any())
                            {
                                <div class="rating-stars">
                                    @{
                                        var averageRating = game.Reviews.Average(r => r.Rating);
                                        var fullStars = (int)averageRating;
                                        var hasHalfStar = averageRating - fullStars >= 0.5;
                                    }
                                    @for (int i = 0; i < fullStars; i++)
                                    {
                                        <span>★</span>
                                    }
                                    @if (hasHalfStar)
                                    {
                                        <span>☆</span>
                                    }
                                    @for (int i = 0; i < 5 - fullStars - (hasHalfStar ? 1 : 0); i++)
                                    {
                                        <span style="color: #666;">☆</span>
                                    }
                                    <small>(@game.Reviews.Count avaliações)</small>
                                </div>
                            }
                            else
                            {
                                <div class="rating-stars">
                                    <small style="color: #8892b0;">Sem avaliações ainda</small>
                                </div>
                            }

                            <p class="card-text flex-grow-1">
                                <strong>Descrição:</strong> @(game.Description.Length > 100 ? game.Description.Substring(0, 100) + "..." : game.Description)<br>
                                <strong>Desenvolvedor:</strong> @game.Developer?.Username<br>
                                <strong>Lançamento:</strong> @game.ReleaseDate.ToShortDateString()
                            </p>

                            @if (game.Genres != null && game.Genres.Any())
                            {
                                <div class="mb-2">
                                    @foreach (var genre in game.Genres.Take(3))
                                    {
                                        <span class="genre-badge">@genre.GenreName</span>
                                    }
                                </div>
                            }

                            <div class="mt-auto">
                                <span class="price-tag">@game.Price.ToString("C")</span>
                                <a asp-controller="Games" asp-action="Details" asp-route-id="@game.GameId" class="btn-game-details">Ver Detalhes</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="no-games">
                    <h3>Nenhum jogo encontrado</h3>
                    <p>Não foi possível encontrar jogos com os critérios de pesquisa selecionados.</p>
                </div>
            </div>
        }
    </div>

    @if (Model != null && Model.Any())
    {
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Anterior</a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">Próximo</a>
                </li>
            </ul>
        </nav>
    }
</div>