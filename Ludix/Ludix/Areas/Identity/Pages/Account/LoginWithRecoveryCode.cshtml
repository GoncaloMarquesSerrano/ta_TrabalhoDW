@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery code verification";
}

<style>
    :root {
        --primary-dark: #0a192f;
        --secondary-dark: #172a45;
        --accent-gold: #FFD700;
        --text-light: #e6f1ff;
        --input-bg: #112240;
        --input-border: #233554;
        --danger-red: #ff6b6b;
        --warning-orange: #FFA500;
    }

    body {
        background-color: var(--primary-dark);
        color: var(--text-light);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        margin: 0;
        padding: 1rem;
    }

    .recovery-container {
        background-color: var(--secondary-dark);
        border-radius: 10px;
        padding: 3rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        border: 1px solid rgba(255, 165, 0, 0.3);
        max-width: 500px;
        width: 100%;
    }

    h1 {
        color: var(--warning-orange);
        font-size: 2.2rem;
        margin-bottom: 1rem;
        text-align: center;
    }

    hr {
        border-color: rgba(255, 165, 0, 0.2);
        margin: 1.5rem 0;
    }

    p {
        color: var(--text-light);
        font-size: 1.1rem;
        margin-bottom: 2rem;
        text-align: center;
        line-height: 1.6;
    }

    .form-floating label {
        color: #8892b0;
    }

    .form-control {
        background-color: var(--input-bg);
        border: 1px solid var(--input-border);
        color: var(--text-light);
        transition: all 0.3s ease;
    }

        .form-control:focus {
            background-color: var(--input-bg);
            color: var(--text-light);
            border-color: var(--warning-orange);
            box-shadow: 0 0 0 0.25rem rgba(255, 165, 0, 0.25);
        }

    .btn-login {
        background-color: var(--warning-orange);
        border: none;
        color: var(--primary-dark);
        font-weight: 600;
        padding: 0.75rem;
        border-radius: 30px;
        transition: all 0.3s ease;
        cursor: pointer;
        width: 100%;
        margin-top: 1rem;
    }

        .btn-login:hover {
            background-color: transparent;
            color: var(--warning-orange);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 165, 0, 0.3);
            border: 2px solid var(--warning-orange);
        }

    .text-danger {
        color: var(--danger-red) !important;
    }

    .validation-summary-errors {
        background-color: rgba(255, 107, 107, 0.1);
        border-left: 4px solid var(--danger-red);
        padding: 1rem;
        margin-bottom: 1.5rem;
        border-radius: 0 4px 4px 0;
    }

    .recovery-warning {
        color: var(--warning-orange);
        font-weight: 500;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    @@media (max-width: 768px) {
        .recovery-container {
            padding: 2rem;
        }

        h1 {
            font-size: 1.8rem;
        }
    }
</style>

<div class="recovery-container">
    <h1>@ViewData["Title"]</h1>
    <hr />
    <p class="recovery-warning">
        ⚠️ You have requested to log in with a recovery code.
    </p>
    <p>
        This login will not be remembered until you provide<br>
        an authenticator app code at log in or disable 2FA and log in again.
    </p>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="validation-summary-errors" role="alert"></div>

        <div class="form-floating mb-3">
            <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" placeholder="Enter recovery code" />
            <label asp-for="Input.RecoveryCode">Recovery Code</label>
            <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-login">Log in</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}