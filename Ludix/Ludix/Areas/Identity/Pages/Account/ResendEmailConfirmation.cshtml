@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<style>
    :root {
        --primary-dark: #0a192f;
        --secondary-dark: #172a45;
        --accent-gold: #FFD700;
        --text-light: #e6f1ff;
        --input-bg: #112240;
        --input-border: #233554;
        --danger-red: #ff6b6b;
        --info-blue: #4a90e2;
    }

    body {
        background-color: var(--primary-dark);
        color: var(--text-light);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        margin: 0;
        padding: 1rem;
    }

    .resend-container {
        background-color: var(--secondary-dark);
        border-radius: 10px;
        padding: 3rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        border: 1px solid rgba(74, 144, 226, 0.3);
        max-width: 500px;
        width: 100%;
    }

    h1 {
        color: var(--accent-gold);
        font-size: 2.2rem;
        margin-bottom: 0.5rem;
        text-align: center;
    }

    h2 {
        color: var(--text-light);
        font-size: 1.3rem;
        font-weight: 400;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    hr {
        border-color: rgba(74, 144, 226, 0.2);
        margin: 1.5rem 0;
    }

    .form-floating label {
        color: #8892b0;
    }

    .form-control {
        background-color: var(--input-bg);
        border: 1px solid var(--input-border);
        color: var(--text-light);
        transition: all 0.3s ease;
    }

        .form-control:focus {
            background-color: var(--input-bg);
            color: var(--text-light);
            border-color: var(--info-blue);
            box-shadow: 0 0 0 0.25rem rgba(74, 144, 226, 0.25);
        }

    .btn-resend {
        background-color: var(--info-blue);
        border: none;
        color: var(--primary-dark);
        font-weight: 600;
        padding: 0.75rem;
        border-radius: 30px;
        transition: all 0.3s ease;
        cursor: pointer;
        width: 100%;
    }

        .btn-resend:hover {
            background-color: transparent;
            color: var(--info-blue);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(74, 144, 226, 0.3);
            border: 2px solid var(--info-blue);
        }

    .text-danger {
        color: var(--danger-red) !important;
    }

    .validation-summary-errors {
        background-color: rgba(255, 107, 107, 0.1);
        border-left: 4px solid var(--danger-red);
        padding: 1rem;
        margin-bottom: 1.5rem;
        border-radius: 0 4px 4px 0;
    }

    .info-message {
        color: var(--info-blue);
        text-align: center;
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    @@media (max-width: 768px) {
        .resend-container {
            padding: 2rem;
        }

        h1 {
            font-size: 1.8rem;
        }

        h2 {
            font-size: 1.1rem;
        }
    }
</style>

<div class="resend-container">
    <h1>@ViewData["Title"]</h1>
    <h2>Enter your email</h2>
    <hr />
    <p class="info-message">
        We'll send you a new confirmation link to verify your email address.
    </p>

    <form method="post">
        <div asp-validation-summary="All" class="validation-summary-errors" role="alert"></div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.Email">Email Address</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-resend">Resend Confirmation</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}