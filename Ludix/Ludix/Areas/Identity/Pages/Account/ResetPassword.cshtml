@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<style>
    :root {
        --primary-dark: #0a192f;
        --secondary-dark: #172a45;
        --accent-gold: #FFD700;
        --text-light: #e6f1ff;
        --input-bg: #112240;
        --input-border: #233554;
        --danger-red: #ff6b6b;
        --success-green: #4CAF50;
    }

    body {
        background-color: var(--primary-dark);
        color: var(--text-light);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        margin: 0;
        padding: 1rem;
    }

    .reset-container {
        background-color: var(--secondary-dark);
        border-radius: 10px;
        padding: 3rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        border: 1px solid rgba(76, 175, 80, 0.3);
        max-width: 500px;
        width: 100%;
    }

    h1 {
        color: var(--accent-gold);
        font-size: 2.2rem;
        margin-bottom: 0.5rem;
        text-align: center;
    }

    h2 {
        color: var(--text-light);
        font-size: 1.3rem;
        font-weight: 400;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    hr {
        border-color: rgba(76, 175, 80, 0.2);
        margin: 1.5rem 0;
    }

    .form-floating label {
        color: #8892b0;
    }

    .form-control {
        background-color: var(--input-bg);
        border: 1px solid var(--input-border);
        color: var(--text-light);
        transition: all 0.3s ease;
    }

        .form-control:focus {
            background-color: var(--input-bg);
            color: var(--text-light);
            border-color: var(--success-green);
            box-shadow: 0 0 0 0.25rem rgba(76, 175, 80, 0.25);
        }

    .btn-reset {
        background-color: var(--success-green);
        border: none;
        color: var(--primary-dark);
        font-weight: 600;
        padding: 0.75rem;
        border-radius: 30px;
        transition: all 0.3s ease;
        cursor: pointer;
        width: 100%;
        margin-top: 1rem;
    }

        .btn-reset:hover {
            background-color: transparent;
            color: var(--success-green);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(76, 175, 80, 0.3);
            border: 2px solid var(--success-green);
        }

    .text-danger {
        color: var(--danger-red) !important;
    }

    .validation-summary-errors {
        background-color: rgba(255, 107, 107, 0.1);
        border-left: 4px solid var(--danger-red);
        padding: 1rem;
        margin-bottom: 1.5rem;
        border-radius: 0 4px 4px 0;
    }

    .password-instructions {
        color: #8892b0;
        font-size: 0.9rem;
        margin-top: 0.5rem;
        line-height: 1.4;
    }

    @@media (max-width: 768px) {
        .reset-container {
            padding: 2rem;
        }

        h1 {
            font-size: 1.8rem;
        }

        h2 {
            font-size: 1.1rem;
        }
    }
</style>

<div class="reset-container">
    <h1>@ViewData["Title"]</h1>
    <h2>Reset your password</h2>
    <hr />

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="validation-summary-errors" role="alert"></div>
        <input asp-for="Input.Code" type="hidden" />

        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.Email">Email Address</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please enter your password." />
            <label asp-for="Input.Password">New Password</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
            <div class="password-instructions">At least 6 characters with uppercase, lowercase, and special characters</div>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please confirm your password." />
            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-reset">Reset Password</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}