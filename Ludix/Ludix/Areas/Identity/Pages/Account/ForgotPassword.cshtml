@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Recuperação de Senha";
}

<style>
    :root {
        --primary-dark: #0a192f;
        --secondary-dark: #172a45;
        --accent-gold: #FFD700;
        --text-light: #e6f1ff;
        --input-bg: #112240;
        --input-border: #233554;
    }

    body {
        background-color: var(--primary-dark);
        color: var(--text-light);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        margin: 0;
        padding: 1rem;
    }

    .password-container {
        background-color: var(--secondary-dark);
        border-radius: 10px;
        padding: 3rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        border: 1px solid rgba(255,215,0,0.1);
        max-width: 500px;
        width: 100%;
    }

    h1 {
        color: var(--accent-gold);
        font-size: 2rem;
        margin-bottom: 0.5rem;
        text-align: center;
    }

    h2 {
        color: var(--text-light);
        font-size: 1.3rem;
        font-weight: 400;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    hr {
        border-color: rgba(255,215,0,0.2);
        margin: 1.5rem 0;
    }

    .form-floating label {
        color: #8892b0;
    }

    .form-control {
        background-color: var(--input-bg);
        border: 1px solid var(--input-border);
        color: var(--text-light);
        transition: all 0.3s ease;
    }

        .form-control:focus {
            background-color: var(--input-bg);
            color: var(--text-light);
            border-color: var(--accent-gold);
            box-shadow: 0 0 0 0.25rem rgba(255, 215, 0, 0.25);
        }

    .btn-reset {
        background-color: var(--accent-gold);
        border: none;
        color: var(--primary-dark);
        font-weight: 600;
        padding: 0.75rem;
        border-radius: 30px;
        transition: all 0.3s ease;
        margin-top: 1rem;
    }

        .btn-reset:hover {
            background-color: transparent;
            color: var(--accent-gold);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 215, 0, 0.3);
            border: 2px solid var(--accent-gold);
        }

    .text-danger {
        color: #ff6b6b !important;
    }

    .password-icon {
        font-size: 2.5rem;
        color: var(--accent-gold);
        text-align: center;
        margin-bottom: 1rem;
    }

    .login-link {
        text-align: center;
        margin-top: 1.5rem;
    }

        .login-link a {
            color: var(--accent-gold);
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .login-link a:hover {
                text-decoration: underline;
            }
</style>

<div class="password-container">
    <div class="password-icon">🔑</div>
    <h1>@ViewData["Title"]</h1>
    <h2>Digite seu email para recuperar sua senha</h2>
    <hr />

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.Email">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <button type="submit" class="w-100 btn btn-lg btn-reset">Recuperar Senha</button>
    </form>

    <div class="login-link">
        <p>Lembrou sua senha? <a asp-page="./Login">Faça login aqui</a></p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}