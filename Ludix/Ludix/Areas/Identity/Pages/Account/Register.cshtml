@page
@model RegisterModel
@{
    ViewData["Title"] = "Registo";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Criar uma nova conta.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Username" class="form-control" aria-required="true" placeholder="Nome de utilizador" />
                <label asp-for="Input.Username">Nome de utilizador</label>
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Senha</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirmar senha</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Campo para solicitar ser desenvolvedor -->
            <div class="form-check mb-3">
                <input asp-for="Input.RequestDeveloper" class="form-check-input" id="requestDeveloper" />
                <label asp-for="Input.RequestDeveloper" class="form-check-label">Solicitar ser desenvolvedor</label>
            </div>

            <!-- Campo para website (apenas visível quando solicitar ser desenvolvedor) -->
            <div class="form-floating mb-3 developer-fields" style="display: none;">
                <input asp-for="Input.Website" class="form-control" placeholder="https://example.com" />
                <label asp-for="Input.Website">Website</label>
                <small class="form-text text-muted">O seu pedido será  analisado e aprovado por um administrador.</small>
                <span asp-validation-for="Input.Website" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registar</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Utilize outro serviço para registar.</h3>
            <hr />

            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            Ainda não existem serviços de autenticação externos. Ler depois
                            <a href="https://go.microsoft.com/fwlink/?LinkID=532715">este artigo</a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info mt-3">
        @TempData["Message"]
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Script para mostrar/ocultar campos específicos de desenvolvedor
        document.addEventListener('DOMContentLoaded', function () {
            var requestDeveloperCheckbox = document.getElementById('requestDeveloper');
            var developerFields = document.querySelectorAll('.developer-fields');

            function toggleDeveloperFields() {
                developerFields.forEach(function(field) {
                    field.style.display = requestDeveloperCheckbox.checked ? 'block' : 'none';
                });
            }

            // Configuração inicial
            toggleDeveloperFields();

            // Listener para alterações
            requestDeveloperCheckbox.addEventListener('change', toggleDeveloperFields);
        });
    </script>
}